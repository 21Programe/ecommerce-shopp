<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfoHubApp.SalesPage"
             Title="Vantagens">
    <CollectionView x:Name="SalesList" Margin="20">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="0,5" Padding="10" HasShadow="True">
                    <HorizontalStackLayout Spacing="20">
                        <Image Source="{Binding ImagemUrl}" WidthRequest="50" HeightRequest="50"/>
                        <VerticalStackLayout>
                            <Label Text="{Binding Nome}" FontAttributes="Bold" FontSize="18"/>
<Label Text="{Binding VantagemTexto}" TextColor="Green" FontAttributes="Bold"/>
                            <Label Text="{Binding PrecoDesconto, StringFormat='R$ {0:F2}'}" FontSize="16"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>